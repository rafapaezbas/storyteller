@print-char ( char --> )

	,char STR
	,char LDR #0a EQU ,&end JCN
	,char LDR #00 EQU ,&end JCN
	.Screen/x DEI2 #0008 ADD2 .Screen/x DEO2
	#00 ,char LDR #0008 MUL2 ;font-data ADD2 .Screen/addr DEO2
	#01 .Screen/sprite DEO
	&end
	POP
	RTN

BRK

@char $1

@print-new-line ( -- )

	,char LDR #0a NEQ ,&end JCN
	.Screen/y DEI2 #0008 ADD2 .Screen/y DEO2
	#0000 .Screen/x DEO2
	&end
	POP
	RTN

BRK

@load-file ( -- )

    ;file/name .File/name DEO2
    #00ff .File/length DEO2 ( will attempt to read 255 bytes )
	;file/data .File/load DEO2 ( set address for the data to read, and do read )
    .File/success DEI2 #0000 EQU2 ,&failed JCN

    LIT 'Y .Console/write DEO
	;print-file JMP2

    &failed
    LIT 'N .Console/write DEO

BRK

@print-file ( -- )

	&loop
	;file/data ,&counter LDR2 ADD2 LDA2 ,&char STR
	,&char LDR ;print-char JSR2
	,&char LDR ;print-new-line JSR2
	,&counter LDR2 #0001 ADD2 ,&counter STR2
	.File/success DEI2 ,&counter LDR2 GTH2 ,&loop JCN

	&counter 0000
	&char 00

BRK

